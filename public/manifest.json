{
  "manifest_version": 3,

  "name": "VerifyPage",
  "description": "Chrome Extension, TypeScript",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "cookies",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
